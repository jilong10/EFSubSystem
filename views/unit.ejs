<% include ./partials/header %>

<br>
<h1>EF Units</h1>
<table class="table table-striped table-bordered table-responsive">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Date</th>
			<th scope="col">Time</th>
			<th scope="col">Type</th>
			<th scope="col">Cost</th>
			<th scope="col">Size</th>
			<th scope="col">Description</th>
			<th scope="col">Deploy Amount</th>
		</tr>
	</thead>
	<tfoot class="thead-dark">
		<th scope="col">Name</th>
		<th scope="col">Date</th>
		<th scope="col">Time</th>
		<th scope="col">Type</th>
		<th scope="col">Cost</th>
		<th scope="col">Size</th>
		<th scope="col">Description</th>
		<th scope="col">Deploy Amount</th>
	</tfoot>
	<tbody>
<% data.forEach(unit => { %>
	<tr>
		<td><%= unit.unitName %></td>
		<td><%= unit.date %></td>
		<td><%= unit.time %></td>
		<td><%= unit.unitType %></td>
		<td><%= unit.cost %></td>
		<td><%= unit.unitSize %></td>
		<td><%= unit.description %></td>
		<td>
			<div class="input-group mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="basic-addon3">
					<button type="button" onClick="deploy(this.id, '<%= unit.unitType %>')" class="btn btn-success" id="<%= unit.unitName %>">Deploy</button>
				</span>
				</div>
				<input type="number" class="form-control" id="<%= unit.unitName + 'Input' %>" aria-describedby="basic-addon3" placeholder="Number of Units">
			</div>
		</td>
	</tr>
<% }); %>
	</tbody>
</table>

<div class="container">	
	<div class="row">
		<div class="form-group col-12 col-md-6 border rounded hide" id="newDeploymentUnitForm">
			<label>Unit Name: </label>
			<label id="unit_name"></label><br>

			<label>Unit Type: </label>
			<label id="unit_type"></label><br>

			<label for="coordinate_x">Coordinate X: </label>
			<input type="number" class="form-control mb-3" id="coordinate_x">

			<label for="coordinate_y">Coordinate Y: </label>
			<input type="number" class="form-control mb-3" id="coordinate_y">

			<button onclick="cancelDeploymentUnit()" class="btn mb-3">Cancel</button>
			<button onclick="addDeploymentUnit()" class="btn float-right btn-success mb-3">Deploy</button>			
		</div>
	</div>
</div>

<% include ./partials/footer %>